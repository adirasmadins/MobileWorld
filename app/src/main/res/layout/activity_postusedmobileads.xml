<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="usmanali.mobileworld.Activity_Files.postusedmobileads"
   >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/mobileimage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/upload"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/mobilename"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp"
        android:layout_margin="16dp"
        android:background="@drawable/editext_drawable"
        android:hint="Enter Mobile Name"
        android:inputType="textPersonName"
        android:layout_below="@+id/mobileimage"
        />

    <EditText
        android:id="@+id/mobilesaleprice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Price"
        android:background="@drawable/editext_drawable"
        android:inputType="number"
        android:padding="6dp"
        android:layout_margin="16dp"
        android:layout_below="@+id/mobilebrand"
        />

    <EditText
        android:id="@+id/howmuchused"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="How much you have used it"
        android:inputType="textPersonName"
        android:layout_margin="16dp"
        android:padding="6dp"
        android:background="@drawable/editext_drawable"
        android:layout_below="@+id/mobilesaleprice"
        />

    <EditText
        android:id="@+id/warrantyleft"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp"
        android:hint="Warranty Left if any"
        android:background="@drawable/editext_drawable"
        android:inputType="textPersonName"
        android:layout_below="@+id/howmuchused"
        android:layout_margin="16dp"
        />

    <Button
        android:id="@+id/placead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffff"
        android:text="Post Ad"
        android:layout_below="@+id/otherdescription"
       />

    <EditText
        android:id="@+id/otherdescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp"
        android:layout_margin="16dp"
        android:background="@drawable/editext_drawable"
        android:hint="Enter Other description (optional)"
        android:inputType="textMultiLine"
        android:layout_below="@+id/warrantyleft"
        />

    <EditText
        android:id="@+id/mobilebrand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="6dp"
        android:background="@drawable/editext_drawable"
        android:hint="Enter Mobile Brand"
        android:inputType="textPersonName"
        android:layout_below="@+id/mobilename"
        android:layout_margin="16dp" />
</RelativeLayout>

</ScrollView>
