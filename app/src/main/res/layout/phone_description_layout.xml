<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:background="?android:selectableItemBackground"
    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:paddingLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specifications"
                android:textColor="#ffff"
                android:id="@+id/matchtitle" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/nameofphoneheading"
                android:text="Name"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/nameofphone"
                android:text="Samsung Galaxy S8"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/brandheading"
                android:text="Brand"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/brand"
                android:text="Samsung"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/ramofphoneheading"
                android:text="RAM"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/ramofphone"
                android:text="4GB DDR3"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/frontcameraheading"
                android:text="Front Camera"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/frontcamera"
                android:text="8 MegaPixels"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/backcameraheading"
                android:text="Back Camera"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/backcamera"
                android:text="16 MegaPixels"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/Screensizeheading"
                android:text="Screen Size"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/screensize"
                android:text="5.7 Inches"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/Osheading"
                android:text="Operating System"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/operatingsystem"
                android:text="Android 7.1 Naugat"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/batteryheading"
                android:text="Battery Life"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/battery"
                android:text="4000 Mah"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/screenresolutionheading"
                android:text="Screen Resolution"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/screenresolution"
                android:text="1440 X 2160"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/simtypeheading"
                android:text="Sim Type"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/simtype"
                android:text="Single Sim"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/storageheading"
                android:text="Storage"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/storage"
                android:text="64GB,128GB options available"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/processorheading"
                android:text="Processor"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/processor"
                android:text="None"
                android:textStyle="italic"/>
        </LinearLayout>
        <LinearLayout
            style="@style/sub_linearlayout_in_listview_phonedescription"
            android:weightSum="3.0"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/heading_in_listview_phonedescription"
                android:layout_weight="1.45"
                android:layout_width="0.0dip"
                android:id="@+id/priceheading"
                android:text="Price"
                android:textSize="15.0sp"/>
            <TextView
                style="@style/detail_in_listview_phonedescription"
                android:layout_weight="1.55"
                android:layout_width="0.0dip"
                android:id="@+id/price"
                android:text="Rs 50,000"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
