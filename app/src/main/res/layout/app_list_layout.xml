<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/productscard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/appimg"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:src="@drawable/huaweip10plus" />
        <TextView
            android:id="@+id/appnametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appimg"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="appname"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        <TextView
            android:id="@+id/appversiontxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appnametxt"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif"
            android:text="version"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:background="@null"
             android:id="@+id/download_btn"
             android:textColor="@color/colorPrimary"
             android:text="Download"
             android:layout_below="@+id/appversiontxt"
             />
    </RelativeLayout>
</android.support.v7.widget.CardView>